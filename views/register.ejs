<!DOCTYPE html>
<html>
<header>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link type="text/css" rel="stylesheet" href="/reset.css">
    <link type="text/css" rel="stylesheet" href="/main.css">
    <link type="text/css" rel="stylesheet" href="/signin.css">
</header>

<body class="flex-display-center mg-top-50">

    <main class="signin-container">
        <form action="/register" method="POST" name="register" id="register" class="flex-display-center flexflow-column">
            <% regErrors.forEach(function(e){ %>
                <div class="errors"><%= e %></div>
            <% }) %>
            <h1>Register</h1>
            <p>E-mail:</p>
            <input autocomplete="off" name="email" id="email" type="text" placeholder="E-mail">
            <p class="mg-top-30">Password:</p>
            <input autocomplete="off" name="password" id="password" type="password" placeholder="Password">
            <p>Confirm Password:</p>
            <input autocomplete="off" name="passwordConfm" id="password-confm" type="password" placeholder="Confirm Password">
            <button id="register-page" class="bc-ligh font-dark font-m">Register</button>
            <a href="/" class="mg-top-5 font-s"> - Back to Sign-in</a>
        </form>
    </main>
</body>

</html>